{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": "Unemployment Rate (%) Worldwide (2001-2021)",
    "data": {
        "url": "https://raw.githubusercontent.com/JSHI0019/fit3179/main/data/unemployment%20analysis_cleaned.csv"
    },
    "transform": [
        {
            "filter": "datum.Unemployment > 0"
        }
    ],
    "encoding": {
        "x": {
            "field": "Year",
            "type": "quantitative",
            "title": "Year",
            "axis": {
                "tickCount": 31
            },
            "scale": {
                "type": "log",
                "domain": [
                    1990,
                    2021
                ]
            }
        },
        "y": {
            "field": "Unemployment",
            "type": "quantitative",
            "title": "Unemployment Rate (%)"
        }
    },
    "layer": [
        {
            "mark": "area",
            "encoding": {
                "color": {
                    "field": "Country",
                    "type": "nominal"
                },
                "opacity": {
                    "value": 0.6
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Year",
                        "type": "nominal",
                        "format": ","
                    },
                    {
                        "field": "Unemployment",
                        "type": "quantitative",
                        "title": "Unemployment Rate (%)",
                        "format": ".2f"
                    }
                ]
            }
        }
    ]
}