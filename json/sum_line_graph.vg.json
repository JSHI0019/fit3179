{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 600,
    "title": "Unemployment Rate (%) Worldwide (2001-2021)",
    "data": {
        "url": "https://raw.githubusercontent.com/JSHI0019/fit3179/main/unemployment%20analysis_cleaned.csv"
    },
    "params": [
        {
            "name": "Country_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "China",
                    "France",
                    "Russia",
                    "United Kingdom",
                    "United States of America",
                    "Australia"
                ],
                "labels": [
                    "Show All",
                    "China",
                    "France",
                    "Russia",
                    "United Kingdom",
                    "United States of America",
                    "Australia"
                ],
                "name": "Country Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Unemployment > 0"
        },
        {
            "filter": "Country_selection == null || datum.Country == Country_selection"
        }
    ],
    "encoding": {
        "x": {
            "field": "Year",
            "type": "quantitative",
            "title": "Year"
        },
        "y": {
            "field": "Unemployment",
            "type": "quantitative",
            "title": "Unemployment Rate (%)"
        }
    },
    "layer": [
        {
            "mark": "line",
            "encoding": {
                "color": {
                    "field": "Country",
                    "type": "nominal",
                    "legend": {
                        "orient": "left"
                    }
                },
                "opacity": {
                    "value": 0.6
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Year",
                        "type": "nominal",
                        "format": ","
                    },
                    {
                        "field": "Unemployment",
                        "type": "quantitative",
                        "title": "Unemployment Rate (%)",
                        "format": ".2f"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "Country",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['Year'] == 2021 && (datum['Country'] == 'South Africa' || datum['Country'] == 'Djibouti' || datum['Country'] == 'Eswatini' || datum['Country'] == 'West Bank and Gaza' || datum['Country'] == 'Congo, Rep.')",
                        "value": 1
                    },
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Year",
                        "type": "nominal",
                        "format": ","
                    },
                    {
                        "field": "Unemployment",
                        "type": "quantitative",
                        "title": "Unemployment Rate (%)",
                        "format": ".2f"
                    }
                ]
            }
        }
    ]
}