{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Unemployment Rate (%) Worldwide",
    "width": 800,
    "projection": {
        "type": "equalEarth"
    },
    "height": 400,
    "params": [
        {
            "name": "Year_selection",
            "value": 2021,
            "bind": {
                "input": "range",
                "min": 1991,
                "max": 2021,
                "step": 1,
                "name": "Year:  "
            }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/JSHI0019/fit3179/main/data/unemployment%20analysis_cleaned.csv"
            },
            "transform": [
                {
                    "lookup": "Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/JSHI0019/fit3179/main/json/ne_110m_admin_0_countries.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME"
                    },
                    "as": "geo"
                },
                {
                    "filter": "datum.Year == Year_selection"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#fff",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "Unemployment",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            0,
                            40
                        ],
                        "scheme": "darkred"
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Unemployment",
                        "title": "Unemployment Rate (%)",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "Year",
                        "type": "quantitative",
                        "title": "Year"
                    }
                ]
            }
        }
    ],
    "config": {}
}