{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 600,
    "title": "Unemployment Rate (%) Worldwide (2001-2021)",
    "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/4_interactive_scatter_plot/data/COVID_19_10_Oct_2020.csv"
    },
    "params": [
        {
            "name": "Unemployment_rate_above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 30,
                "step": 100,
                "name": "Unemployment Rate (%): "
            }
        },
        {
            "name": "Country_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "China",
                    "France",
                    "Russia",
                    "United Kingdom",
                    "United States of America"
                ],
                "labels": [
                    "Show All",
                    "China",
                    "France",
                    "Russia",
                    "United Kingdom",
                    "United States of America"
                ],
                "name": "Country Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Unemployment > 0"
        },
        {
            "filter": "datum.Unemployment > Unemployment_rate_above"
        },
        {
            "filter": "Country_selection == null || datum.Country == Country_selection"
        },
        {
            "calculate": "datum.Confirmed/datum.Population * 10000",
            "as": "Cases per 10,000 Population"
        }
    ],
    "encoding": {
        "x": {
            "field": "Year",
            "type": "quantitative",
            "title": "Year",
            "axis": {
                "tickCount": 20
            },
            "scale": {
                "type": "log",
                "domain": [
                    2001,
                    2021
                ]
            }
        },
        "y": {
            "field": "Unemployment",
            "type": "quantitative",
            "axis": {
                "tickCount": 100
            },
            "scale": {
                "type": "log",
                "domain": [
                    0,
                    30
                ]
            }
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "Unemployment",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1,
                            7.5,
                            15,
                            22.5,
                            30
                        ],
                        "range": [
                            10,
                            50,
                            150,
                            200,
                            300,
                            400
                        ]
                    },
                    "legend": {
                        "format": ".2s"
                    }
                },
                "color": {
                    "field": "Country",
                    "type": "nominal",
                    "legend": {
                        "orient": "right"
                    }
                },
                "opacity": {
                    "value": 0.6
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Deaths",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "Recovered",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "Unemployment",
                        "type": "quantitative",
                        "format": ".2f"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "Country",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
                        "value": 1
                    },
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Confirmed",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "Active",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "Deaths",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "Recovered",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "Cases per 10,000 Population",
                        "type": "quantitative",
                        "format": ".2f"
                    }
                ]
            }
        }
    ]
}